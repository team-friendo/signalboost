#!/usr/bin/env bash

pushd `pwd` # store current dir
cd `dirname "$0"` # cd to script path
cd ../.. # cd to project root

echo "--- decrypting secrets..."
./bin/blackbox/decrypt_all_files

echo "--- building docker images..."

echo "--- building signalboost docker image..."
docker build -f docker/signalboost.dockerfile -t "signalboost:latest" .

echo "--- building signald docker image..."
docker build -f docker/signald.dockerfile -t "signald:latest" .

echo "--- done building docker images"

# https://github.com/grafana/loki/blob/v1.5.0/docs/clients/docker-driver/README.md
echo "--- installing Loki docker driver..."
docker plugin install grafana/loki-docker-driver:latest --alias loki --grant-all-permissions

echo "--- installing dependencies..."
docker-compose -f docker-compose-dev.yml \
               run --entrypoint 'yarn install' \
               app

echo "--- setting up database..."
docker-compose -f docker-compose-dev.yml \
               run --entrypoint /signalboost/bin/db/setup \
               app

echo "--- removing db container..."
docker rm -f signalboost_db

echo "--- DONE!"

popd
